header
  nav.blue-grey.darken-3
    .nav-wrapper
      a(href='/about').brand-logo
        img(src='/images/runstant.png')
        span Run
        span.lighter stant 
      ul.right.hide-on-small-and-down
        li.tooltipped(data-tooltip='play')
          a#btn-play(href='', onclick='{opts.onplay}')
            i.mdi-av-play-arrow
        | 
        li.tooltipped(data-tooltip='fork')
          a#btn-play(href='', onclick='{fork}')
            i.mdi.material-icons call_split
        | 
        li.tooltipped(data-tooltip='share')
          a#btn-share(href='#', onclick='runstant.shareModal.open(); return false;')
            i.mdi-social-share
        |       
        li.tooltipped(data-tooltip='setting')
          a#btn-setting(href='#', onclick='runstant.detailModal.open(); return false;')
            i.mdi-action-settings
      |     
      ul#nav-mobile.side-nav(style='left: -250px;')
        li
          a(href='') Share
      |     
      a.button-collapse(href='', data-activates='nav-mobile')
        i.mdi-navigation-menu
  style(scoped).
    :scope { display: block }
    nav {
      padding: 0px 20px;
    }

    .brand-logo {
      position: relative;
      white-space: nowrap;
    }
    .brand-logo img {
      height: 40px;
      transform: translate(0px, 5px);
    }
    .brand-logo .lighter {
      font-weight: 200;
    }
  script.
    var self = this;

    this.fork = function() {
      window.open(location.href);
    };

//- 
extends ./layout

block content
  include parts/header

  style.
    .card .card-image-wrapper {
      background-color: #eee;
      font-size: 1rem;
      border-bottom: 1px solid hsla(0, 0%, 63%, 0.2);
    }
    .card .card-image img {
      display: block;
      margin: auto;
      max-height: 240px;
      min-height: 240px;
      width: auto;
      text-align: center;
      background-color: #fff;
    }
    .card .card-content {
      padding: 8px;
      min-height: 150px;
    }
  
  div.container
    div.row
      each collection in json.collections
        div.col.s12.m6.l4
          div.card.center
            div.card-image-wrapper
              a.card-image(href='#{collection.url}')
                img(src='#{collection.image}')
            div.card-content
              span.card-title.grey-text.text-darken-4 #{collection.title}
              p #{collection.description}
            div.card-action
              a(href='#{collection.url}', target='_blank') Open

  include parts/footer

